<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="footer-two" inherit_id="website.snippet_options">
        <xpath expr="//we-select[@data-variable='footer-template']" position="inside">
            <we-button title="Custom_Footer"
                       data-name="plantzone_footer_opt"
                       data-customize-website-views="lexyle.lexyle_footer"
                       data-customize-website-variable="'Custom_Footer'"
                       data-img="/website/static/src/img/snippets_options/footer_template_links.svg"/>
        </xpath>
    </template>
    <template id="lexyle_footer" inherit_id="website.layout" name="Template Footer plantzone" active="False">
        <xpath expr="//footer//div[@id='footer']" position="replace">
              <link rel="stylesheet" href="/lexyle/static/src/css/home.css"/>
            <style>
 .o_footer_scrolltop{
         display:none !important;
                }

                .footergrid p, .footergrid a {
   font-family: " font-family: 'MyCustomFonttwo', sans-serif;", serif !important;
                }
                .addressfooter{
                display: flex;
                align-items: center;
                }
                .addressfooter p {

                }
                .footergrid li{
                list-style: none;
                margin-bottom: 5px;
                }
                .footergrid a{
                list-style: none;
                color: white !important;
                }
                .buttonbasichover:hover {
                background-color: aliceblue !important;
                color: black !important;
                }
                .footergrid{
                display:grid;
                padding: 25px 0px;
                grid-template-columns:1fr ;
                }
                .footergrid button{
                background: rgba(0, 0, 0, 1);
                color: white;
                border-radius: 20px;
                padding: 5px 35px;
                border: 2px solid white;
                margin: 50px 0px;
                }


                /* Small devices (≥576px) */
                @media (min-width: 576px) {

                }

                /* Medium devices (≥768px) */
                @media (min-width: 768px) {
                .footergrid{
                display:grid;
                grid-template-columns:1fr 1fr ;
                }
                }

                /* Large devices (≥992px) */
                @media (min-width: 992px) {
                .footergrid{
                display:grid;
                grid-template-columns:1fr 1fr 1fr 1fr ;
                }

                }

                /* Extra large devices (≥1200px) */
                @media (min-width: 1200px) {

                }

                /* Extra extra large devices (≥1400px) */
                @media (min-width: 1400px) {

                }
                /* Extra extra large devices (≥1400px) */
                @media (max-width: 768px) {
                .footergrid {
                padding: 50px 10px;
                }
                .footergrid div{
                display: flex;
                justify-content: center;
                <!--					margin: 30px 0px;-->
                }
                .footergrid div button{

                margin: 30px 0px;
                }
                }

            </style>
            <div style="  background: rgb(0, 0, 0);" class="footercontainer ">
                <div class="footergrid container">
                    <div style="display: flex;
  align-content: center;
  align-items: center;">
                        <img style="    height: 30px;
  width: auto;" src="/lexyle/static/src/images/imgpsh_fullsize_anim.png"/>
                    </div>
                    <div>
                        <button class="buttonbasichover">Menu</button>
                    </div>
                    <div>
                        <ul>
                            <li>
                                <a href="/lms">LMS</a>
                            </li>
                            <li>
                                <a href="/gamification">Gamification</a>
                            </li>
                            <li>
                                <a href="/">Internships</a>
                            </li>
                            <li>
                                <a href="#contactus">Contact Us</a>
                            </li>
                            <li>
                                <a href="/ai">
                                    AI
                                </a>
                            </li>


                        </ul>
                    </div>
                    <div class="addressfooter">
                        <p>India
                            +91 871 460 3392
                            <br />
                            contact-tvm@sigbglobal.com
                               <br />
                            1st Floor, Pamba
                               <br />
                            Building, Phase I
                               <br />
                            Technopark, Kerala
                        </p>
                    </div>
                </div>
            </div>

        </xpath>
    </template>
</odoo>