                    <script type="text/javascript">
                        function toggleMenu() {
                        const header = document.querySelector('.headerdiv');
                        const toggleButton = document.querySelector('.toggle-button');

                        if (header.classList.contains('active')) {
                        header.classList.add('closing'); // Add closing class
                        setTimeout(() => {
                        header.classList.remove('active', 'closing'); // Remove both after animation
                        toggleButton.textContent = 'â˜°'; // Reset toggle button icon when closing
                        }, 500); // Match this time with the CSS transition duration
                        } else {
                        header.classList.remove('closing'); // Ensure closing class is removed
                        header.classList.add('active'); // Add active class
                        toggleButton.textContent = 'X'; // Change icon to 'X' when opening
                        }
                        }

                        // Close the menu when clicking outside
                        document.addEventListener('click', function (event) {
                        const header = document.querySelector('.headerdiv');
                        const toggleButton = document.querySelector('.toggle-button');

                        // Check if the click is outside the header and the toggle button
                        if (!(header.contains(event.target) || toggleButton.contains(event.target))) {
                        if (header.classList.contains('active')) {
                        header.classList.add('closing'); // Add closing class
                        setTimeout(() => {
                        header.classList.remove('active', 'closing'); // Remove both after animation
                        toggleButton.textContent = 'â˜°'; // Reset toggle button
                        }, 500); // Match this time with the CSS transition duration
                        }
                        }
                        });
                    </script>
                    <script>document.addEventListener("DOMContentLoaded", function () {
    const searchIcon = document.getElementById("search_bar_custom");
    const popup = document.querySelector(".popupheader");

    searchIcon.addEventListener("click", function (event) {
        event.preventDefault();
        popup.classList.toggle("active");
        event.stopPropagation(); // Prevents the event from bubbling to document
    });

    // Prevent closing when clicking inside the popup
    popup.addEventListener("click", function (event) {
        event.stopPropagation();
    });

    // Close popup when clicking outside
    document.addEventListener("click", function (event) {
        if (!popup.contains(event.target) &amp;&amp; !searchIcon.contains(event.target)) {
            popup.classList.remove("active");
        }
    });
});

